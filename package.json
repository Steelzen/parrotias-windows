{
  "name": "Parrotias",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "build": {
    "appId": "com.parrotias",
    "icon": "resources/icon.ico",
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "publish": null,
    "win": {
      "target": "msi",
      "icon" :"resources/icon.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true
    },
    "files": [
      "main.js",
      "resources/**/*",
      "scripts/**/*",
      "styles/**/*",
      "index.html",
      "forge.config.js",
      "preload.js"
    ]
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Taehyung Kwon",
  "license": "MIT",
  "devDependencies": {
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-squirrel-startup": "^1.0.0",
    "path": "^0.12.7",
    "update-electron-app": "^2.0.1"
  }
}
